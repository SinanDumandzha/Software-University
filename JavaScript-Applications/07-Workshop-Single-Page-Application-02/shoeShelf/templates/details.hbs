{{>header}}
<div class="offer-details">
    <h1>{{offer.productName}}</h1>
    <div class="info">
        <img src="{{offer.imageUrl}}" alt="" />
        <div class="description">
            {{offer.description}}
            <br />
            <br />
            <p class="price">${{offer.price}}</p>
        </div>
    </div>
    <div class="actions">
        {{#if offer.isCreator}}
        <a href="#/{{offer.id}}/edit-offer">Edit</a>
        <a href="#/{{offer.id}}/delete-offer">Delete</a>
        {{else}}
        {{#if offer.isInTheClientList}}
        <span>You bought it</span>
        {{else}}
        <a href="/{{offer.id}}/buy">Buy</a>
        {{/if}}
        {{/if}}
    </div>
</div>
{{>footer}}